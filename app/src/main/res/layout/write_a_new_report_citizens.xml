<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TAKE A PHOTO BUTTON -->
        <Button
            android:id="@+id/buttonWriteANewReportActivity_CAMERA"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="28dp"
            android:text="@string/buttonWriteANewReportActivity_CAMERA" />

        <!-- SEND BUTTON -->
        <Button
            android:id="@+id/buttonWriteANewReportActivity_SEND"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="28dp"
            android:layout_marginBottom="30dp"
            android:text="@string/buttonWriteANewReportActivity_SEND" />

    </LinearLayout>

    <EditText
        android:id="@+id/editTextWriteANewReportActivity"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="top"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:hint="Write a new post..."
        android:textSize="17dp" />

    <TextView
        android:id="@+id/textViewWriteANewReportActivity_TOPIC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="12dp"
        android:paddingLeft="30dp"
        android:textStyle="bold"
        android:textSize="@dimen/write_a_new_report_citizens"
        android:text="@string/textViewWriteANewReportActivity_TOPIC" />

    <EditText
        android:id="@+id/editTextWriteANewReportActivity_TOPIC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:hint="Write a topic"
        android:textSize="17dp" />

    <ImageView
        android:id="@+id/imageViewWriteANewReportActivity"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp" />

</LinearLayout>