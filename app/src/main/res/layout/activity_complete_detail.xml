<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_complete_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sai.hackbandung.CompleteDetailActivity">

    <TextView
        android:id="@+id/textViewCompleteDetailActivity_HANDLE_BY_LABEL"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:textStyle="bold"
        android:textSize="@dimen/activity_complete_detail_HANDLE_BY_LABEL"
        android:text="@string/textViewCompleteDetailActivity_HANDLE_BY_LABEL" />

    <TextView
        android:id="@+id/textViewCompleteDetailActivity_HANDLE_BY_VALUE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:layout_toRightOf="@id/textViewCompleteDetailActivity_HANDLE_BY_LABEL"
        android:textSize="@dimen/activity_complete_detail_HANDLE_BY_VALUE"
        android:text="@string/textViewCompleteDetailActivity_HANDLE_BY_VALUE" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewBefore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_below="@id/textViewCompleteDetailActivity_HANDLE_BY_LABEL"
        android:padding="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp">

            <TextView
                android:id="@+id/textViewCompleteDetailActivity_BEFORE_LABEL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="@dimen/activity_complete_detail_BEFORE_LABEL"
                android:text="@string/textViewCompleteDetailActivity_BEFORE_LABEL" />


            <ImageView
                android:id="@+id/imageViewVerification_BEFORE"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="12dp"
                android:layout_below="@id/textViewCompleteDetailActivity_BEFORE_LABEL"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_below="@id/cardViewBefore"
        android:padding="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp">

            <TextView
                android:id="@+id/textViewCompleteDetailActivity_AFTER_LABEL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="@dimen/activity_complete_detail_AFTER_LABEL"
                android:text="@string/textViewCompleteDetailActivity_AFTER_LABEL" />


            <ImageView
                android:id="@+id/imageViewVerification_AFTER"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="12dp"
                android:layout_below="@id/textViewCompleteDetailActivity_AFTER_LABEL"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
