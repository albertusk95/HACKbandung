<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="25dp">

            <ImageView
                android:id="@+id/imageViewCitizensProfpic"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/avatar" />

            <TextView
                android:id="@+id/textViewCitizensFullname"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Full name"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="15dp"
                android:layout_toRightOf="@id/imageViewCitizensProfpic" />

            <TextView
                android:id="@+id/textViewCitizensPostingDate"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="Posting date"
                android:layout_marginLeft="30dp"
                android:layout_below="@id/textViewCitizensFullname"
                android:layout_toRightOf="@id/imageViewCitizensProfpic"/>

            <TextView
                android:id="@+id/textViewCitizensTopic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Topic"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_marginBottom="20dp"
                android:layout_below="@id/imageViewCitizensProfpic" />

            <TextView
                android:id="@+id/textViewCitizensMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Message"
                android:textSize="14dp"
                android:layout_marginBottom="20dp"
                android:layout_below="@id/textViewCitizensTopic" />

            <ImageView
                android:id="@+id/imageViewCitizensVerification"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="15dp"
                android:layout_below="@id/textViewCitizensMessage"/>

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/imageViewCitizensVerification">

                <TableRow>

                    <Button
                        android:id="@+id/buttonWIP"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="W.I.P"
                        android:layout_marginRight="9dp"
                        android:padding="12dp"
                        android:background="#f7dc6f"
                        android:layout_below="@id/imageViewCitizensVerification" />

                    <Button
                        android:id="@+id/buttonDone"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Done"
                        android:layout_marginLeft="9dp"
                        android:layout_toRightOf="@id/buttonWIP"
                        android:padding="12dp"
                        android:background="#f7dc6f"
                        android:layout_below="@id/imageViewCitizensVerification" />

                </TableRow>

            </TableLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>